<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration debug="true" scan="true" scanPeriod="30 seconds">
	
	<property resource="logger.properties"/>
	<property name="LOG_PATH" value="${logging.path}" />
	<property name="LOG_ARCHIVE" value="${LOG_PATH}/${logging.archive.path}" />
	
	<appender name="Console-Appender" class="ch.qos.logback.core.ConsoleAppender">
		<layout>
			<pattern>${logging.pattern.console}</pattern>
		</layout>
	</appender>
	
	<appender name="RollingFile-Appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/${logging.file}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_ARCHIVE}/${logging.file}_%d{dd-MMM-yyyy}_%i.log</fileNamePattern>
			<maxHistory>50</maxHistory>
			<totalSizeCap>150MB</totalSizeCap>
         	<maxFileSize>3MB</maxFileSize>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<charset>UTF-8</charset>
			<pattern>${logging.pattern.file}</pattern>
		</encoder>
	</appender>
	
	<appender name="Async-Appender" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="RollingFile-Appender" />
	</appender>
	
	<logger name="com.allianz.portfolio_manager" level="debug" additivity="false">
		<appender-ref ref="Async-Appender" />
	</logger>
	
	<root>
		<appender-ref ref="Async-Appender" />
	</root>
	
</configuration>